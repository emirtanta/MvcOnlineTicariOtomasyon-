@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<KargoDetay>

@{
    ViewBag.Title = "Kargo Takip";
    Layout = "~/Views/Shared/_CariLayout.cshtml";
}

<h2>KargoTakip</h2>


<br />
@* arama işlemi için tanımladık *@
@using (Html.BeginForm("KargoTakip", "CariPanel", FormMethod.Get))
{
    <p>
        Takip No: @Html.TextBox("p")
        <input type="submit" value="Ara" />
    </p>
}
<br />
<table class="table table-bordered" style="margin-top:20px;">

    <tr>
        <th>Personel</th>
        <th>Alıcı</th>
        <th>Takip Kodu</th>
        <th>Tarih</th>
        <th>Detaylar</th>
    </tr>

    @foreach (var k in Model)
    {
        <tr>
            <td>@k.Personel</td>
            <td>@k.Alici</td>
            <td>@k.TakipKodu</td>
            <td>@k.Tarih</td>
            <td>
                <a href="/CariPanel/CariKargoTakip/@k.TakipKodu" class="btn btn-default" style="background-color:lightcoral;color:white;">Detaylar</a>
            </td>
        </tr>
    }

</table>
