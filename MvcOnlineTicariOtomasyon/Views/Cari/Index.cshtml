@using MvcOnlineTicariOtomasyon.Models.Siniflar
@model List<Cariler>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-striped">

    <tr>
        <th>#</th>
        <th>Adı</th>
        <th>Soyad</th>
        <th>Şehir</th>
        <th>Mail</th>
        <th>Güncelle</th>
        <th>Sil</th>
        <th>Detay</th>
    </tr>

    @foreach (var k in Model)
    {
        <tr>
            <td>@k.Cariid</td>
            <td>@k.CariAd</td>
            <td>@k.CariSoyad</td>
            <td>@k.CariSehir</td>
            <td>@k.CariMail</td>
            <td>
                <a href="/Cari/CariGetir/@k.Cariid" class="btn btn-warning">Güncelle</a>
            </td>
            <td>
                <a href="/Cari/CariSil/@k.Cariid" class="btn btn-danger">Sil</a>
            </td>
            <td>
                <a href="/Cari/MusteriSatis/@k.Cariid" class="btn btn-default" style="background-color:lightcoral;color:white;">Satış Geçmiş</a>
            </td>
        </tr>
    }

</table>

<a href="/Cari/YeniCari" class="btn btn-primary">Cari Ekle</a>


